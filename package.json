{
  "name": "txma-infra",
  "repository": {
    "type": "git",
    "url": "https://github.com/govuk-one-login/txma-infra"
  },
  "author": "GDS",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "infrastructure/dev-tools",
    "infrastructure/audit-test-tools"
  ],
  "scripts": {
    "lint": "prettier . --check || exit 1 ; eslint . --max-warnings=0",
    "lint:fix": "prettier . --write ; eslint . --fix",
    "postinstall": "husky install",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "validate:templates": "bash ./scripts/validate-templates.sh"
  },
  "dependencies": {
    "@aws-sdk/credential-provider-node": "3.629.0"
  },
  "devDependencies": {
    "@smithy/smithy-client": "2.5.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.9.0",
    "husky": "8.0.3",
    "lint-staged": "13.3.0",
    "prettier": "3.3.3",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  }
}
